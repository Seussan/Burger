<img src="../assets/img/BobsBurgers.png" alt="BobsBurgers Logo">

<h1>Eat-Da-Burger!</h1>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
        {{this.id}}. {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>
    {{/unless}}
  {{/each}}
</ul>

<h3>Devoured Burgers!</h3>
<ul>
  {{#each burgers}}
    {{#if this.devoured}}
        {{this.id}}. {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
        </form>
    {{/if}}
  {{/each}}
</ul>

<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="button" class="btn btn-primary">Submit</button>

  <h5>Enter a burger you want to eat then click the "Submit" button.</h5>

</form>